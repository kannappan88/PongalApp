<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MaterialTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@android:color/transparent</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">#fff</item>
        
        <item name="android:windowBackground">@color/action_bar_color</item>
        
        <!--Actionbar overlay  -->
        <item name="android:windowActionBarOverlay">true</item>

        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="MaterialTheme.Actionbar.FitsystemWindow">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="MaterialTheme.Actionbar">

        <!-- colorPrimary is used for the default action bar background -->
        <!-- <item name="colorPrimary">@color/action_bar_color</item> -->
        <item name="android:clipToPadding">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <!-- <item name="android:windowBackground">@color/window_bg</item> -->
    </style>

</resources>